#!/usr/bin/env bash
#
# crimson red

set -euo pipefail

###########   THEME COLORS   ###########
# Hyprland
NEW_ACTIVE_BORDER="f38ba8ff"
NEW_INACTIVE_BORDER="00000000"

# Waybar
W_COLOR="#f38ba8"
W_BG="#1e1e2e"
W_HOVER="#eba0ac"
W_ACTIVE_BG="#313244"
W_ACTIVE_COLOR="#f38ba8"
W_URGENT_BG="#f38ba8"
W_URGENT_COLOR="#1e1e2e"
W_MODE_BG="#1e1e2e"
W_MODE_COLOR="#1e1e2e"
W_CUSTOM_HOVER_BG="#45475a"
W_BATT_CHARGING_BG="#fab387"
W_BATT_CHARGING_COLOR="#1e1e2e"
W_BATT_CRITICAL_BG="#f38ba8"
W_FOCUS="#f38ba8"
W_MUTED="#6c7086"

# Wlogout
WL_COLOR="#f38ba8"
WL_BG="rgba(30, 30, 46, 0.76)"
WL_BTN_COLOR="#f38ba8"
WL_BTN_BG="rgba(30, 30, 46, 0.76)"
WL_BTN_HOVER_BG="rgba(235, 160, 172, 0.92)"

# Wofi
WO_BORDER="2px none #f38ba8"
WO_BG="#1e1e2e"
WO_INPUT_COLOR="#f38ba8"
WO_OUTER_BORDER="0px solid #f38ba8"
WO_OUTER_BG="#1e1e2e"
WO_TEXT_UNSEL="#f38ba8"

# Mako
MKO_BG="#1e1e2e"
MKO_TEXT="#f38ba8"
MKO_BORDER="#1e1e2e"
MKO_PROG="#eba0ac"

###########   FILE PATHS   ###########
HYPR_CONF="$HOME/.config/hypr/hyprland.conf"
WAYBAR_CSS="$HOME/.config/waybar/style.css"
WLOGOUT_CSS="$HOME/.config/wlogout/style.css"
WOFI_CSS="$HOME/.config/wofi/style.css"
MAKO_CONF="$HOME/.config/mako/config"

###########   APPLY CHANGES   ###########
echo "ðŸ”„ Applying theme..."

# 1) Hyprland
sed -i -e "s/^ *col\.active_border *= *.*/col.active_border = rgba(${NEW_ACTIVE_BORDER})/" \
       -e "s/^ *col\.inactive_border *= *.*/col.inactive_border = rgba(${NEW_INACTIVE_BORDER})/" "$HYPR_CONF"

# 2) Waybar
sed -i \
    -e "11s|.*|    color: ${W_COLOR};|" \
    -e "57s|.*|    background-color: ${W_BG};|" \
    -e "63s|.*|    color: ${W_COLOR};|" \
    -e "76s|.*|    color: ${W_HOVER};|" \
    -e "80s|.*|    background-color: ${W_ACTIVE_BG};|" \
    -e "81s|.*|    color: ${W_ACTIVE_COLOR};|" \
    -e "85s|.*|    background-color: ${W_URGENT_BG};|" \
    -e "86s|.*|    color: ${W_URGENT_COLOR};|" \
    -e "103s|.*|    background-color: ${W_BG};|" \
    -e "104s|.*|    color: ${W_COLOR};|" \
    -e "108s|.*|    background-color: ${W_MODE_BG};|" \
    -e "109s|.*|    color: ${W_MODE_COLOR};|" \
    -e "114s|.*|    background-color: ${W_BG};|" \
    -e "115s|.*|    color: ${W_COLOR};|" \
    -e "119s|.*|    background-color: ${W_BG};|" \
    -e "120s|.*|    color: ${W_COLOR};|" \
    -e "124s|.*|    background-color: ${W_BG};|" \
    -e "125s|.*|    color: ${W_COLOR};|" \
    -e "129s|.*|    background-color: ${W_CUSTOM_HOVER_BG};|" \
    -e "130s|.*|    color: ${W_COLOR};|" \
    -e "144s|.*|    background-color: ${W_BATT_CHARGING_BG};|" \
    -e "145s|.*|    color: ${W_BATT_CHARGING_COLOR};|" \
    -e "150s|.*|        background-color: ${W_BG};|" \
    -e "151s|.*|        color: ${W_COLOR};|" \
    -e "157s|.*|    background-color: ${W_BATT_CRITICAL_BG};|" \
    -e "158s|.*|    color: ${W_COLOR};|" \
    -e "167s|.*|    background-color: ${W_FOCUS};|" \
    -e "171s|.*|    background-color: ${W_MUTED};|" \
    "$WAYBAR_CSS"

# 3) Wlogout
sed -i \
    -e "4s|.*|    color: ${WL_COLOR};|" \
    -e "5s|.*|    background-color: ${WL_BG};|" \
    -e "16s|.*|    color: ${WL_BTN_COLOR};|" \
    -e "19s|.*|    background-color: ${WL_BTN_BG};|" \
    -e "25s|.*|    background-color: ${WL_BTN_HOVER_BG};|" \
    "$WLOGOUT_CSS"

# 4) Wofi
sed -i \
    -e "3s|.*|    border: ${WO_BORDER};|" \
    -e "5s|.*|    background-color: ${WO_BG};|" \
    -e "14s|.*|    color: ${WO_INPUT_COLOR};|" \
    -e "39s|.*|    border: ${WO_OUTER_BORDER};|" \
    -e "41s|.*|    background-color: ${WO_OUTER_BG};|" \
    -e "68s|.*|    color: ${WO_TEXT_UNSEL};|" \
    "$WOFI_CSS"

# 5) Mako
sed -i \
    -e "3s|.*|background-color=${MKO_BG}|" \
    -e "4s|.*|text-color=${MKO_TEXT}|" \
    -e "5s|.*|border-color=${MKO_BORDER}|" \
    -e "6s|.*|progress-color=over ${MKO_PROG}|" \
    "$MAKO_CONF"

# 6) Micro
sed -i '2s|.*|    "colorscheme": "zenburn"|' "$HOME/.config/micro/settings.json"

# 7) Alacritty
sed -i '331s|.*|  "~\/.config\/alacritty\/themes\/themes\/inferno.toml"|' "$HOME/.config/alacritty/alacritty.toml"

# 8) SpeedCrunch
sed -i '5s|.*|Display\\ColorSchemeName=crimson_red|' "$HOME/.config/SpeedCrunch/SpeedCrunch.ini"

# Restart Waybar
pkill waybar || true
nohup waybar >/dev/null 2>&1 &

# Reload Mako
makoctl reload

echo "âœ… theme applied!"
