//  fastfetch config by dillacorn
//  github.com/dillacorn/awtarchy


//  execute with: fastfetch --colors-block-range-start 9 --colors-block-width 3

{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "$HOME/.config/fastfetch/ascii/$(ls ~/.config/fastfetch/ascii | shuf -n 1)",
        "padding": {
            "top": 2,
            "right": 6
        }
    },
    "display": {
        "separator": " "
    },
    "modules": [
	"break",
	"break",
	{
            "type": "title",
            "keyWidth": 10
        },
        {
            "type": "custom",
            "format": "\u001b[90m┌──────────────────────Software───────────────────────┐"
        },
        {
            "type": "os",
            "key": " ",
            "keyColor": "33",  // = color3
        },
        {
            "type": "kernel",
            "key": " ",
            "keyColor": "33",
        },
        {
            "type": "command",
            "key": "󰏖 ",
            "keyColor": "33",
            "text": "echo \"$(pacman -Q | wc -l) (pacman), $(echo $(($(flatpak list --system --app 2>/dev/null | wc -l) + $(flatpak list --user --app 2>/dev/null | wc -l)))) (flatpak)\""
        },
        {
            "type": "terminal",
            "key": " ",
            "keyColor": "33", 
        },
        {
            "type": "wm",
            "key": " ",
            "keyColor": "33", 
        },
        {
            "type": "custom",
            "format": "\u001b[90m├──────────────────────Hardware───────────────────────┤"
        },
        {
            "type": "host",
            "key": " \u001b[0m PC\u001b[0m",
        },
        {
            "type": "cpu",
            "key": " ",
            "showPeCoreCount": true,
        },
        {
            "type": "gpu",
            "key": " ",
            "detectionMethod": "pci",
        },
        {
            "type": "display",
            "key": "󱄄 ",
        },
        {
          "type": "custom",
          "format": "\u001b[90m├────────────────────Uptime / Age─────────────────────┤"
        },
        {
            "type": "uptime",
            "key": " ",
        },
        {
            "type": "command",
            "key": "󱦟 \u001b[0m OS Age:\u001b[0m",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
        },
        {
          "type": "custom",
          "format": "\u001b[90m└─────────────────────────────────────────────────────┘"
        },
        "break",
        "colors",
        "break",
        "break",
    ]
}
