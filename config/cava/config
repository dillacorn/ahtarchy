# github.com/dillacorn/awtarchy/tree/main/config/cava
# ~/.config/cava/config

## Centered, mirrored “solid” look using bars from the middle (no color changes).

[general]
framerate = 90
autosens = 1
bars = 0
bar_width = 1
bar_spacing = 0
lower_cutoff_freq = 30
higher_cutoff_freq = 16000
sleep_timer = 0

[input]
# Use PipeWire by default; switch to pulse/alsa if you actually need to.
method = pipewire
source = auto
sample_rate = 44100
sample_bits = 16

[output]
# noncurses is fast and works well in terminals
method = noncurses
# Make bars grow from the center up and down
orientation = horizontal
# Stereo mirrors both channels with low frequencies in the center
channels = stereo
mono_option = average
reverse = 0
# Helps eliminate flicker in some terminals (e.g., Alacritty)
synchronized_sync = 1
# Leave waveform disabled to keep the “filled bar mass” aesthetic
waveform = 0

[color]
# Intentionally untouched so your terminal/theme controls colors
# background = default
# foreground = default

[smoothing]
# Modern single knob for smoothness
noise_reduction = 77
# “Monstercat” smoothing builds a solid-looking shape
monstercat = 1
waves = 0
gravity = 100

[eq]
# Flat EQ; adjust if a band dominates visually
1 = 1
2 = 1
3 = 1
4 = 1
5 = 1
