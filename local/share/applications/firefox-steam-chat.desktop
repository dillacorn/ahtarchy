# FILE: ~/.local/share/applications/firefox-steam-chat.desktop
[Desktop Entry]
Version=1.0
Type=Application
Name=Steam Chat (Firefox)
Comment=Steam Chat in a dedicated Firefox profile, auto-created if missing
Exec=sh -lc 'PROFILE="$HOME/.mozilla/firefox/steam-chat"; [ -d "$PROFILE" ] || /usr/bin/firefox -CreateProfile "steam-chat $PROFILE"; exec env MOZ_ENABLE_WAYLAND=1 MOZ_USE_XINPUT2=1 /usr/bin/firefox --class=steam-chat --name=SteamChat --profile "$PROFILE" --new-window https://steamcommunity.com/chat'
Icon=firefox
Terminal=false
Categories=Network;InstantMessaging;
StartupWMClass=steam-chat
StartupNotify=true
SingleMainWindow=true
