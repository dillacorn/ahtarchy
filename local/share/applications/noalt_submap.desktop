# github.com/dillacorn/awtarchy/tree/main/local/share/applications
# ~/.local/share/applications/noalt_submap.desktop

[Desktop Entry]
Type=Application
Name=noalt submap (disable alt navigation)
Exec=/bin/sh -c "echo noalt > /tmp/hypr-submap; notify-send -a Hyprland -t 1000 'noalt submap: ON'; hyprctl dispatch submap noalt"
Icon=utilities-terminal
Terminal=false
Categories=Utility;
